{
  "name": "ednc-pdca",
  "version": "1.0.0",
  "description": "ED&C PDCA Management Web Service",
  "main": "backend/server.js",
  "scripts": {
    "start": "npm run start:backend",
    "start:backend": "node backend/server.js",
    "start:frontend": "node frontend-server.js",
    "dev": "npm run dev:backend",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "nodemon frontend-server.js",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "init-db": "node backend/models/database.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "pdca",
    "planning",
    "management",
    "korean"
  ],
  "author": "ED&C",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "serve-static": "^1.15.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
